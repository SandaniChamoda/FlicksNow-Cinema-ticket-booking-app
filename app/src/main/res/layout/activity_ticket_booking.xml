<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    android:padding="16dp"
    tools:context=".TicketBookingActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Book Ticket"
            android:textColor="@color/accent_white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Select Date -->
    <TextView
        android:id="@+id/select_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:textColor="@color/accent_white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/select_date_title">

        <androidx.cardview.widget.CardView
            android:id="@+id/date_fri"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="3dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/background_dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fri"
                    android:textColor="@color/accent_white"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textColor="@color/accent_white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oct"
                    android:textColor="@color/secondary_gray"
                    android:textSize="8sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/date_sat"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="3dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/background_dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sat"
                    android:textColor="@color/accent_white"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:textColor="@color/accent_white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oct"
                    android:textColor="@color/secondary_gray"
                    android:textSize="8sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/date_sun"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="3dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/background_dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sun"
                    android:textColor="@color/accent_white"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:textColor="@color/accent_white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oct"
                    android:textColor="@color/secondary_gray"
                    android:textSize="8sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/date_mon"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="3dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/background_dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mon"
                    android:textColor="@color/accent_white"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textColor="@color/accent_white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oct"
                    android:textColor="@color/secondary_gray"
                    android:textSize="8sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/date_tue"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="3dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/primary_purple">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tue"
                    android:textColor="@color/accent_white"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26"
                    android:textColor="@color/accent_white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oct"
                    android:textColor="@color/accent_white"
                    android:textSize="8sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/date_wed"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="3dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/background_dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wed"
                    android:textColor="@color/accent_white"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27"
                    android:textColor="@color/accent_white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oct"
                    android:textColor="@color/secondary_gray"
                    android:textSize="8sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/date_thu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/background_dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thu"
                    android:textColor="@color/accent_white"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28"
                    android:textColor="@color/accent_white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oct"
                    android:textColor="@color/secondary_gray"
                    android:textSize="8sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Show Time -->
    <TextView
        android:id="@+id/show_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Time"
        android:textColor="@color/accent_white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/date_layout"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/show_time_title">

        <androidx.cardview.widget.CardView
            android:id="@+id/time_9am"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/background_dark">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9:00 am"
                android:textColor="@color/accent_white"
                android:textSize="11sp"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/time_12pm"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="3dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/background_dark">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="12:00 pm"
                android:textColor="@color/accent_white"
                android:textSize="11sp"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/time_3pm"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="3dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/background_dark">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3:00 pm"
                android:textColor="@color/accent_white"
                android:textSize="11sp"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/time_6pm"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="3dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/primary_purple">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6:30 pm"
                android:textColor="@color/accent_white"
                android:textSize="11sp"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/time_8pm"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/background_dark">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8:45 pm"
                android:textColor="@color/accent_white"
                android:textSize="11sp"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Select Format -->
    <TextView
        android:id="@+id/select_format_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Format"
        android:textColor="@color/accent_white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/time_layout"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/format_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/select_format_title">

        <androidx.cardview.widget.CardView
            android:id="@+id/format_2d"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/primary_purple">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2D"
                android:textColor="@color/accent_white"
                android:textSize="12sp"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/format_3d"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/background_dark">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3D"
                android:textColor="@color/accent_white"
                android:textSize="12sp"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/format_imax"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/background_dark">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="IMAX"
                android:textColor="@color/accent_white"
                android:textSize="12sp"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Screen -->
    <View
        android:id="@+id/screen_view"
        android:layout_width="150dp"
        android:layout_height="3dp"
        android:background="@color/accent_white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/format_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Row Labels -->
    <TextView
        android:id="@+id/row_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A\nB\nC\nD\nE\nF\nG"
        android:textColor="@color/secondary_gray"
        android:textSize="12sp"
        android:lineSpacingExtra="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/screen_view"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Seat Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/seat_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/screen_view"

        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_seat" />

    <!-- Legend -->
    <LinearLayout
        android:id="@+id/legend_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/seat_recycler_view">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/available_seat"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textColor="@color/secondary_gray"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="16dp">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/reserved_seat"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reserved"
                android:textColor="@color/secondary_gray"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/selected_seat"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected"
                android:textColor="@color/secondary_gray"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Section -->
    <LinearLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/legend_layout"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Total Seats and Price -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Two Seats"
                android:textColor="@color/secondary_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/total_seats_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/accent_white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textColor="@color/accent_white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Pay Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/pay_button"
            android:layout_width="140dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/primary_purple">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pay"
                android:textColor="@color/accent_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>